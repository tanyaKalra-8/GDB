import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		System.out.println("Enter a number: ");
		int n = sc.nextInt();

        int sp=4;
        for(int i=1;i<=n;i++){
            for(int j=1;j<=sp;j++){
                System.out.print("  ");
            }
            for(int j=i;j<=i;j++){
                System.out.print("* ");
            }
            System.out.println();
            sp=sp-1;
        }
	  }
}
